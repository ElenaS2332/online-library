@model Online_Library.Domain.Dtos.ReadingListDto

@{
ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reading List</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BooksInReadingList)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @if (Model.Count != 0)
                {
                    @foreach (var bookInReadingList in Model.BooksInReadingList!)
                    {
                        <li>@Html.DisplayFor(modelItem => bookInReadingList.Book.Title)</li>
                    }
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BooksInReadingList!.Count)
                    </dt>
                    <dt class="col-sm-2">
                        @Html.DisplayFor(model => model.BooksInReadingList!.Count)
                    </dt>
                }
            </ul>
        </dd>
    </dl>
    <div>
        Count: @Model.Count
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
