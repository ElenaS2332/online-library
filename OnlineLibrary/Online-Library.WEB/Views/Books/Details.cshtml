@model Online_Library.Domain.Entities.Book

@{
ViewData["Title"] = "Book Details";
}

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 600px;"> <!-- Adjust max-width to make the card smaller -->
        <div class="card-header bg-primary text-white">
            <h2>@Model.Title</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 text-secondary">
                    <strong>Title:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Model.Title
                </dd>

                <dt class="col-sm-4 text-secondary">
                    <strong>Published Date:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Model.PublishDate.ToString("MMMM dd, yyyy")
                </dd>

                <dt class="col-sm-4 text-secondary">
                    <strong>ISBN:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Model.ISBN
                </dd>

                <dt class="col-sm-4 text-secondary">
                    <strong>Description:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Model.Description
                </dd>

                <dt class="col-sm-4 text-secondary">
                    <strong>Author:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Model.Author?.Name
                </dd>

                <dt class="col-sm-4 text-secondary">
                    <strong>Genre:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Model.Genre?.Name
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
