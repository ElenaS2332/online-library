@model Online_Library.Domain.Entities.BooksInReadingList

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 500px;"> <!-- Smaller card width -->
        <div class="card-header bg-primary text-white">
            <h2>Add to Reading List</h2>
        </div>
        <div class="card-body">
            @if (Model.Book != null)
            {
                <form asp-action="AddToReadingListConfirmed">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="BookId" />
                    <input type="hidden" asp-for="ReadingListId" />

                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label text-secondary">
                            Title:
                        </label>
                        <div class="col-sm-8">
                            <span>@Model.Book.Title</span>
                        </div>
                    </div>

                    @{
                        bool isAlreadyInReadingList = false;
                        foreach (var book in Model.ReadingList.BooksInReadingList)
                        {
                            if (book.BookId == Model.BookId)
                            {
                                isAlreadyInReadingList = true;
                                break; // Exit loop early since we found the book
                            }
                        }
                    }

                    @if (isAlreadyInReadingList)
                    {
                        <div class="alert alert-warning" role="alert">
                            This book is already in your reading list.
                        </div>
                    }
                    else
                    {
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg">Add To Reading List</button>
                        </div>
                    }
                </form>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    The book could not be found.
                </div>
            }
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
