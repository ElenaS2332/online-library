@model Online_Library.Domain.Entities.Author

@{
ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 600px;">
        <div class="card-header bg-danger text-white">
            <h2>Delete Author</h2>
        </div>
        <div class="card-body">
            <h3 class="text-center">Are you sure you want to delete this author?</h3>
            <hr />
            <h4 class="text-muted">Author Details</h4>
            <dl class="row">
                <dt class="col-sm-4 text-secondary">
                    <strong>Name:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Model.Name
                </dd>

                <dt class="col-sm-4 text-secondary">
                    <strong>Surname:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Model.Surname
                </dd>

                <dt class="col-sm-4 text-secondary">
                    <strong>Date of Birth:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Model.DateOfBirth.ToString("MMMM dd, yyyy")
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
        </div>
    </div>
</div>
