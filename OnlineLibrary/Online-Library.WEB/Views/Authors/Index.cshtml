@model IEnumerable<Online_Library.Domain.Entities.Author>

@{
ViewData["Title"] = "Index";
}

<div>
    <h3 class="mb-4 text-center text-primary">Authors</h3>
    
        <p>
            <a asp-action="Create" class="btn btn-primary mb-3">Create New Author</a>
        </p>


    <div class="table-container">
        <table class="table table-hover table-striped table-bordered table-custom">
            <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @item.DateOfBirth.ToString("MMMM dd, yyyy")
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>


</div>


