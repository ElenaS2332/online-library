@model System.Collections.Generic.List<OnlineLibraryAdmin.Models.Subscription>


<div class="container">
    <div class="row">
        <a asp-action="ExportSubscriptions" class="btn btn-danger">Export All Subscriptions</a>

    </div>

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Customer name</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5">No active subscriptions</td>
                </tr>
            }
            else
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];

                    <tr>
                        <th scope="row">@(i + 1)</th>
                        <td>@item.User.FirstName @item.User.LastName</td>
                        <td><a asp-action="Details" asp-route-Id="@item.Id" class="btn btn-danger">Details</a></td>
                        <td><a asp-action="CreateInvoice" asp-route-Id="@item.Id" class="btn btn-danger">Create Invoice</a></td>
                    </tr>

                }
            }
            </tbody>
          
        </table>
    </div>

</div>